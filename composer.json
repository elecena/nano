{
  "name": "macbre/nano",
  "description": "PHP framework",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Maciej Brencz",
      "email": "maciej.brencz@gmail.com"
    }
  ],
  "license": "MIT",
  "require": {
    "php": ">=5.6.0",
    "ext-curl": "*",
    "ext-imagick": "*",
    "ext-json": "*",
    "ext-mysqli": "*",
    "ext-readline": "*",
    "domnikl/statsd": "~2.3",
    "predis/predis": "^1.1",
    "monolog/monolog": "^1.18",
    "macbre/monolog-utils": "^1.0",
    "tedivm/jshrink": "^1.2"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "0.9",
    "phpunit/phpunit": "^5.7"
  },
  "autoload": {
    "classmap": ["classes/", "classes/utils/", "tests/app/classes/"],
    "psr-4": {
      "Nano\\AppTests\\": "tests/app/tests"
    }
  },
  "scripts": {
    "test": [
      "parallel-lint . --exclude vendor",
      "phpunit"
    ],
    "coverage": [
      "phpunit --coverage-html=.coverage"
    ]
  }
}
