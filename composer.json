{
  "name": "elecena/nano",
  "description": "A legacy PHP framework for elecena.pl",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Maciej Brencz",
      "email": "maciej.brencz@gmail.com"
    }
  ],
  "license": "MIT",
  "require": {
    "php": ">=7.3.0",
    "ext-mysqli": "*",
    "ext-curl": "*",
    "ext-mbstring": "*",
    "ext-gd": "*",
    "ext-xml": "*",
    "predis/predis": "^1.1",
    "monolog/monolog": "2.2.0",
    "macbre/monolog-utils": "^2.1",
    "tedivm/jshrink": "^1.2",
    "phpunit/phpunit": "9.x"
  },
  "autoload": {
    "classmap": ["classes/", "classes/utils/", "tests/app/classes/", "tests/CacheTest.php"],
    "psr-4": {
      "Nano\\AppTests\\": "tests/app/tests"
    }
  },
  "scripts": {
    "test": [
      "phpunit"
    ],
    "coverage": [
      "phpunit --coverage-html=.coverage"
    ],
    "lint": [
      "phpstan analyse app/ classes/ tests/"
    ]
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.82"
  }
}
